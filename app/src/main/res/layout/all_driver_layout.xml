<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/accepted_order_back">

    <RelativeLayout
        android:id="@+id/RL_Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/destination_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/backgroundone"
            android:padding="@dimen/_7sdp">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/individual_driver" />

        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/destination_image"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/driver_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/driver_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="1234567890"
                android:fontFamily="@font/nexa_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/status_RL"
        android:layout_marginBottom="@dimen/_8sdp"

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RL_Detail">
        <TextView
            android:id="@+id/assign_task_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/the_button"

            android:gravity="center_vertical"
            android:fontFamily="@font/nexa_bold"
            android:textStyle="bold"

            android:padding="@dimen/_10sdp"
            android:text="Assign Task"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/driver_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:text="Online"
          android:fontFamily="@font/nexa_bold"
            android:textAllCaps="true"
            android:textColor="@color/black"

            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>



</RelativeLayout>