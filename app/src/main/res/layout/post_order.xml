<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@drawable/common_background"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/postorderId_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Order Id: #21457826"
            android:textColor="#000000"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/postpaymethod_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Cash"
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_toLeftOf="@id/postpaymnet_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Pickup Locaton"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/_9sdp" />

            <View
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="#EAEAEA" />

            <TextView
                android:id="@+id/postpickuplocation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Vishnupuri\n121,Block-E,I-bus stop,Near Anand Super,\nIndore"
                android:textColor="#000000"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <TextView
            android:id="@+id/postpaymnet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Ksh0"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/drop_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Drop Location"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_drop_location"
                android:textColor="@color/grey_2"
                android:textSize="@dimen/_9sdp" />

            <View
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="#EAEAEA" />

            <TextView
                android:id="@+id/postDrop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Vishnupuri\n121,Block-E,I-bus stop,Near Anand Super,\nIndore"
                android:textColor="#000000"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>


        <LinearLayout

            android:layout_below="@+id/drop_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/postorderTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Today 10:20 AM"
                android:textColor="@color/grey_1"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="View Details"
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark_old"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>