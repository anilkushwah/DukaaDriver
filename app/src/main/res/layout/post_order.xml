<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:id="@+id/postorderId_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_13sdp"
            android:layout_alignParentLeft="true"
            android:text="Order Id: #21457826"/>

        <TextView
            android:id="@+id/postpaymethod_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_16sdp"
            android:layout_alignParentRight="true"
            android:text="Cash"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_2"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_13sdp"
            android:layout_alignParentLeft="true"
            android:text="Pickup Locaton"/>

            <View
                android:layout_marginTop="@dimen/_1sdp"
                android:background="#EAEAEA"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_1sdp"/>
            <TextView
                android:id="@+id/postpickuplocation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_13sdp"
                android:layout_alignParentLeft="true"
                android:text="Pickup Locaton"/>
        </LinearLayout>
        <TextView
            android:id="@+id/postpaymnet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:text="â‚¹ 200.00"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_2"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_13sdp"
            android:layout_alignParentLeft="true"
            android:text="Drop Location"/>
            <View
                android:layout_marginTop="@dimen/_1sdp"
                android:background="#EAEAEA"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_1sdp"/>
            <TextView
                android:id="@+id/postDrop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_13sdp"
                android:layout_alignParentLeft="true"
                android:text="Drop Location"/>

        </LinearLayout>



        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/postorderTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Today 10:20 AM"
                android:textColor="@color/grey_1"
                android:textSize="@dimen/_12sdp" />


        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/postViewdetails_tv"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark_old"
            android:textSize="@dimen/_17sdp"
            android:text="View Details"/>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/_1sdp"
        android:background="#EAEAEA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>


</LinearLayout>