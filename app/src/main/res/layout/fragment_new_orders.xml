<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBody"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.NewOrdersFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:orientation="vertical"
        android:background="@drawable/lv_home_bck">

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/back_home_img"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="#ffffff"
                android:text="New Orders"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/laybtn">
            <Button
                android:id="@+id/new_order_btn"
                android:background="@drawable/whitebnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Order"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/post_order_btn"
                android:background="@drawable/laybtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Post Order"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/ordertype_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All New Orders"
            android:textColor="@color/grey_1"
            android:textSize="@dimen/_17sdp"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/new_order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>