<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_8sdp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lv_imageShow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/wishlist_prdct_blue_bck">

                <ImageView
                    android:id="@+id/iv_deliveryItemImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/individual_driver" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/rt_EditReviewRating"
                android:layout_toRightOf="@+id/lv_imageShow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_deleiveryitemsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nexa_bold"
                    android:text="Fresh Onions"
                    android:textColor="#353535"
                    android:textSize="@dimen/_9sdp" />
                <!--
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="(2 kg)"
                                    android:textSize="@dimen/_10sdp"
                                    android:layout_gravity="center"
                                    android:id="@+id/tv_itemQuantity"
                                    android:fontFamily="@font/nexa_light"/>-->

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/item_qty_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.6"
            android:fontFamily="@font/nexa_bold"
            android:gravity="center"
            android:text="2Kg"
            android:textSize="@dimen/_9sdp" />


        <TextView
            android:id="@+id/tv_item_price_per_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="0.7"
            android:fontFamily="@font/nexa_regular"
            android:gravity="end"
            android:text="80.00"
            android:textSize="@dimen/_9sdp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

</LinearLayout>