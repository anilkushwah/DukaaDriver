<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragment.AddnewVehicleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/back_to_chngeV"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:src="@drawable/ic_back_left"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Add new vehicle"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/nexa_bold"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nexa_bold"
                            android:text="Model Name"
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/chang_password"
                            android:hint="Model Number"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nexa_bold"
                            android:text="Vehicle Type"
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/chang_password"
                            android:padding="@dimen/_10sdp">

                            <Spinner
                                android:id="@+id/vehicle_type_spiner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp" />

                        </LinearLayout>

                        <!--  <EditText

                              android:id="@+id/vehicle_type_edt"
                              android:layout_width="match_parent"
                              android:layout_height="55dp"
                              android:layout_marginLeft="10dp"
                              android:layout_marginTop="10dp"
                              android:layout_marginRight="10dp"
                              android:layout_marginBottom="10dp"
                              android:background="@drawable/chang_password"
                              android:hint="Vehicle Type"
                              android:paddingLeft="20dp"
                              android:textSize="18dp" />-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nexa_bold"
                            android:text="Vehicle Number"
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />

                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/chang_password"
                            android:hint="Vehicle Number"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nexa_bold"
                            android:text="Vehicle Registration Number"
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/chang_password"
                            android:hint="Vehicle Registation Number"
                            android:padding="@dimen/_10sdp"
                            android:paddingLeft="20dp"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/nexa_bold"
                            android:text="Vehicle Insurance"
                            android:textColor="#000000"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/lv_upload_bck"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_upload" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nexa_regular"
                                android:padding="@dimen/_5sdp"
                                android:text="Upload"
                                android:textColor="@color/colorBlue"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_login_send_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/the_button"
                        android:fontFamily="@font/nexa_bold"
                        android:textStyle="bold"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>


