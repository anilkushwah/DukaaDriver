<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_back_arrow"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/final_logo" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/curve_bg_yellow_login"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.6"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Mobile Number"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <!--     <EditText
                     android:id="@+id/et_login_UserName"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_35sdp"
                     android:layout_marginHorizontal="@dimen/_10sdp"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:background="@drawable/edt_yellow_bck"
                     android:fontFamily="@font/poppins_light"
                     android:gravity="center|left"
                     android:hint="Phone number"
                     android:inputType="number"

                     android:textSize="@dimen/_11sdp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edt_yellow_bck"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="+254"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_11sdp" />


                <EditText
                    android:id="@+id/et_login_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="left"
                    android:hint="Enter Mobile Number"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlue"
                    android:textColorHint="@color/colorBlue"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>


            <TextView

                android:id="@+id/email_error_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="end"
                android:paddingStart="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorRed"
                android:visibility="gone" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Password"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <!--     <EditText
                     android:id="@+id/et_login_password"
                     android:layout_width="match_parent"


                     android:layout_marginTop="@dimen/_5sdp"
                     android:background="@drawable/edt_yellow_bck"
                     android:fontFamily="@font/poppins_light"
                     android:gravity="center|left"

                     android:inputType="textPassword"
                     android:paddingHorizontal="@dimen/_10sdp"

                     android:textSize="@dimen/_11sdp" />
     -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edt_yellow_bck"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/show_password_img"
                    android:background="@null"
                    android:fontFamily="@font/poppins_light"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlue"
                    android:textColorHint="@color/colorBlue"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:id="@+id/show_password_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:srcCompat="@drawable/ic_baseline_visibility_24" />


            </RelativeLayout>


            <TextView
                android:id="@+id/password_error_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="end"
                android:textSize="@dimen/_11sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="@color/colorRed"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="#EEEEEE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"

                    android:text="OR"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="#EEEEEE" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1.3"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:text="Don't have an Account?"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_GoSignUp_Id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/poppins_light"
                    android:padding="@dimen/_5sdp"
                    android:text="Sign up"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/curve_bg_login"
                android:fontFamily="@font/poppins"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>