<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:id="@+id/earnorderId_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_16sdp"
            android:layout_alignParentLeft="true"
            android:text="Order Id: #21457826"/>

        <TextView
            android:id="@+id/earnpaymethod_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_16sdp"
            android:layout_alignParentRight="true"
            android:text="Cash"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >


        <TextView
            android:id="@+id/earnlocation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_2"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_13sdp"
            android:layout_alignParentLeft="true"
            android:text="Vishnupuri"/>

        <TextView
            android:id="@+id/earnpaymnet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:text="â‚¹ 200.00"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >


        <TextView
            android:id="@+id/earnTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_2"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_13sdp"
            android:layout_alignParentLeft="true"
            android:text="Today 10:20 AM"/>

        <TextView
            android:id="@+id/earnViewdetails_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark_old"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_19sdp"
            android:layout_alignParentRight="true"
            android:text="View Details"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/_1sdp"
        android:background="#EAEAEA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>


</LinearLayout>