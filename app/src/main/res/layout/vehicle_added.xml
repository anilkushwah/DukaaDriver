<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounddialog"
    android:paddingBottom="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"

    android:orientation="vertical">


    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_userdialog"/>


    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/nexa_regular"
        android:text="Your vehicle detalis\nhas been submitted\nSuccessfully for verification!"/>


    <Button
        android:id="@+id/vehicle_added_btn"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:text="OK"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bnt1"/>
</LinearLayout>