<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_margin="@dimen/_3sdp"
            android:orientation="horizontal">



                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:background="@drawable/wishlist_prdct_blue_bck"        android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/individual_driver" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/lv_imageShow"
                android:layout_toLeftOf="@+id/rt_EditReviewRating"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fresh Onions"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_itemsName"
                    android:fontFamily="@font/nexa_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(2 kg)"
                    android:textSize="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_itemQuantity"
                    android:fontFamily="@font/nexa_light"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 X 40"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/ic_quatity_items"
            android:textSize="@dimen/_8sdp"
            android:layout_weight="0.6"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/nexa_bold"/>



        <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="80.00"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/tv_price_per_item"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:fontFamily="@font/nexa_regular"/>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

</LinearLayout>